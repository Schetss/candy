{% include "Core/Layout/Templates/Head.html.twig" %}

<body class="{{ LANGUAGE }}" itemscope itemtype="http://schema.org/WebPage">
  
{% include "Core/Layout/Templates/Cookies.html.twig" %}



  {# HEADER #}

  <header id="header" class="headerStart" {% if page.data.image %}style="background-image:url({{ FRONTEND_FILES_URL~'/pages/images/source/'~page.data.image }})" {% endif %}>
    <div class="container">

      {# Logo #}
      <div id="logo">
        <a href="/"><img src="{{ SITE_URL }}/src/Frontend/Themes/candy/Core/Layout/images/logo.svg" alt="{{ siteTitle }}"></a>
      </div>

      {# Navigation #}
      <nav id="main-nav">
        {{ getnavigation('page', 0, 1) }}
      </nav>

    </div>

  </header>


  {# MAIN CONTENT #}

 

    {# Header #}  
    <div class="default-header">
      <div class="default-header-image">
        {% for HeaderImage in positions.HeaderImage %}
          {% if HeaderImage.html %}
            {{ HeaderImage.html|raw }}
          {% endif %}
        {% endfor %}
      </div>
      <div class="default-header-overlay">
      </div>
      <div class="default-header-text">
        {% for Header in positions.Header %}
          {% if Header.html %}
            {{ Header.html|raw }}
          {% endif %}
        {% endfor %}
      </div>

      <hr class="bottom-line bottom-line-bottom">
    </div>
    
  <div id="topWrapper">
    <div id="main">
      <div class="container">

        {# Main column #} 
        <div class="container-inner">
          <div class="grid">
            <div class="grid-item grid-l-1-1 title-block">
             
                {# Main #} 
                {% for Main in positions.Main %}
                  {% if Main.html %}
                    {{ Main.html|raw }}
                  {% endif %}
                {% endfor %}

            </div>
          </div>
        </div>

      </div>
      <div class="clear"></div>
    </div>
  </div>
  <noscript>
    <div class="message notice">
      <h4>{{ 'lbl.EnableJavascript'|trans|ucfirst }}</h4>
      <p>{{ 'msg.EnableJavascript'|trans }}</p>
    </div>
  </noscript>



{# FOOTER #}

<div id="bottomWrapper">
  {% include "Core/Layout/Templates/Footer.html.twig" %}
</div>

{# General Javascript #}
{% for js in jsFiles %}
  <script src="{{ js.file }}"></script>
{% endfor %}

{# Google Maps API #}
{# <script src="http://maps.google.com/maps/api/js?key=AIzaSyBmuTqgpBYljazmex9jnkDU4QgJ4oHZmJE" type="text/javascript"></script>
 #}
{# Theme specific Javascript #}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="{{ THEME_URL }}/Core/Js/min/parallax-min.js"></script>
<script src="{{ THEME_URL }}/Core/Js/min/jquery.scrollto-min.js"></script>
<script src="{{ THEME_URL }}/Core/Js/min/slider-min.js"></script>
<script src="{{ THEME_URL }}/Core/Js/min/theme-min.js"></script>

{# Site wide HTML #}
{{ siteHTMLFooter|raw }}
</body>
</html>
